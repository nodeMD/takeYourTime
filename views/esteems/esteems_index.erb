<h2>Self-Esteem Exercise Calendar</h2>
  <div class="calendar-container">
    <div class="calendar-header">
      <% Date::ABBR_DAYNAMES.each do |day| %>
        <div class="calendar-day-header"><%= day %></div>
      <% end %>
    </div>
    
    <div class="calendar-body">
      <% # Get the first day of the month
        first_day = Date.today.beginning_of_month
        # Calculate how many days to show before the first day of the month
        days_before = first_day.wday
        # Start from the day before the first day of the month
        current_date = first_day - days_before
        
        # Show 42 days (6 weeks) to ensure we have a full month view
      %>
      <% 42.times do |i| %>
        <% 
          date_key = current_date.strftime('%Y-%m-%d')
          # Determine if this is a day from the current month
          is_current_month = current_date.month == Date.today.month
        %>
        <div class="calendar-day <%= 'completed' if @calendar_data[date_key] %> <%= 'other-month' unless is_current_month %>">
          <%= current_date.day %>
        </div>
        <% 
          # Move to the next day
          current_date += 1
        %>
      <% end %>
    </div>
  </div>

  <style>
    .calendar-container {
      margin: 20px;
      font-family: Arial, sans-serif;
    }
    
    .calendar-header {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      background-color: #f5f5f5;
      padding: 10px;
      border-radius: 8px 8px 0 0;
      border-bottom: 2px solid #ddd;
    }
    
    .calendar-day-header {
      text-align: center;
      font-weight: bold;
      color: #333;
    }
    
    .calendar-body {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 2px;
      padding: 10px;
      background-color: #f9f9f9;
      border-radius: 0 0 8px 8px;
    }
    
    .calendar-day {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      background-color: #fff;
      border: 1px solid #ddd;
      cursor: default;
      transition: background-color 0.2s;
    }
    
    .calendar-day.completed {
      background-color: #4CAF50;
      color: white;
      border-color: #4CAF50;
    }
    
    .calendar-day.other-month {
      color: #ccc;
      background-color: #f5f5f5;
      border-color: #f5f5f5;
    }
    
    .calendar-day:not(.completed):not(.other-month) {
      color: #666;
    }
    
    .calendar-day:hover:not(.completed):not(.other-month) {
      background-color: #f0f0f0;
    }
  </style>

