<h1><%= @checklist.name %></h1>

<a href="/checklist" class="btn btn-secondary">Go Back</a>
<a href="/checklist/<%= @checklist.id %>/items/new" class="btn">Add New Item</a>

<% if @checklist.checklist_items.any? %>
  <table class="items-table">
    <thead>
      <tr>
        <th>Item ID</th>
        <th>Item Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @checklist.checklist_items.each do |item| %>
        <tr class="<%= 'completed' if item.completed %>">
          <td><%= item.id %></td>
          <td>
            <div class="item-name">
              <%= item.name %>
            </div>
          </td>
          <td>
            <form action="/checklist/<%= @checklist.id %>/items/<%= item.id %>/toggle" method="POST" class="toggle-form">
              <button type="submit" class="toggle-button">
                <%= item.completed ? '✓' : '✗' %>
              </button>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>This checklist is empty. Click "Add New Item" to add your first item.</p>
<% end %>
