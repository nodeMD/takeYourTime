<h1>Add New Item to <%= @checklist.name %></h1>

<form action="/checklist/<%= @checklist.id %>/items" method="POST">
  <div class="form-group">
    <label for="item_name">Item Name</label>
    <input type="text" id="item_name" name="checklist_item[name]" required maxlength="200">
  </div>
  
  <div class="form-actions">
    <button type="submit" class="btn">Save</button>
    <a href="/checklist/<%= @checklist.id %>" class="btn btn-secondary">Cancel</a>
  </div>
</form>
